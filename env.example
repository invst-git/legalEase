# Project Chimera Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Google API Key for Gemini AI services
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Database Backend (sqlite for local, firestore for production)
DB_BACKEND=sqlite

# AI Provider (google, openai, etc.)
AI_PROVIDER=google

# Company name for PDF exports
COMPANY_NAME=Your Company Name

# Enable/disable PDF export functionality
EXPORT_PDF_ENABLED=true

# =============================================================================
# FIRESTORE CONFIGURATION (Production)
# =============================================================================
# Uncomment and configure these for Firestore backend

# Path to Google Cloud service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Google Cloud Project ID
# FIRESTORE_PROJECT_ID=your-project-id

# Firestore Database ID (optional, uses default if not specified)
# FIRESTORE_DATABASE=your-database-id

# Google Cloud Storage bucket for file uploads
# GCS_BUCKET=your-storage-bucket

# =============================================================================
# VERTEX AI CONFIGURATION (Optional)
# =============================================================================
# Uncomment and configure these for Vertex AI features

# Google Cloud Project ID for Vertex AI
# VERTEX_PROJECT=your-project-id

# Vertex AI location
# VERTEX_LOCATION=us-central1

# Vertex AI model name
# VERTEX_MODEL=gemini-1.5-pro

# =============================================================================
# DOCUMENT AI CONFIGURATION (Optional)
# =============================================================================
# Uncomment and configure these for Document AI OCR

# Document AI Processor ID
# DOCAI_PROCESSOR_ID=your-processor-id

# Document AI location
# DOCAI_LOCATION=us

# Document AI Project ID
# DOCAI_PROJECT_ID=your-project-id

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret Key (generate a secure random string)
SECRET_KEY=your-secret-key-here

# JWT Algorithm
ALGORITHM=HS256

# JWT Token Expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# CORS origins (comma-separated)
CORS_ORIGINS=*

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file size (bytes)
MAX_FILE_SIZE=52428800

# Allowed file types
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,rtf

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# API rate limit (requests per minute)
API_RATE_LIMIT=60

# Upload rate limit (requests per minute)
UPLOAD_RATE_LIMIT=10
